# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
GET     /assets/img/glyphicons-halflings-white.png      controllers.Assets.at(path="/public", file="/img/glyphicons-halflings-white.png")
GET     /assets/img/glyphicons-halflings.png            controllers.Assets.at(path="/public", file="/img/glyphicons-halflings.png")

GET 	/assets/img/arrow-up.png						controllers.Assets.at(path="/public", file="/img/arrow-up.png")
GET 	/assets/img/arrow-down.png						controllers.Assets.at(path="/public", file="/img/arrow-down.png")

# Home page
GET     /                       			    @controllers.Application.index()
GET		/events/create							@controllers.EventController.pageCreate()
POST    /events        			                @controllers.EventController.save()

POST	/events/getTweets						@controllers.EventController.getTweets()
GET		/events/:eventId						@controllers.EventController.pageDetails(eventId: String)
				

GET		/downloadTweets/:eventId				@controllers.EventController.downloadTweets(eventId: String)

GET		/dictionaries							@controllers.DictionaryController.pageList()
POST	/dictionaries							@controllers.DictionaryController.create()
GET		/dictionaries/statusCreate				@controllers.DictionaryController.statusCreate()
GET		/dictionaries/:dictionaryId				@controllers.DictionaryController.pageDetails(dictionaryId: String)
POST	/dictionaries/addWord					@controllers.DictionaryController.addWord()
GET		/dictionaries/:dictionaryId/getWords	@controllers.DictionaryController.getWords(dictionaryId: String, limit: Integer, pageNum: Integer)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
