# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
GET     /assets/img/glyphicons-halflings-white.png      controllers.Assets.at(path="/public", file="/img/glyphicons-halflings-white.png")
GET     /assets/img/glyphicons-halflings.png            controllers.Assets.at(path="/public", file="/img/glyphicons-halflings.png")

GET 	/assets/img/arrow-up.png						controllers.Assets.at(path="/public", file="/img/arrow-up.png")
GET 	/assets/img/arrow-down.png						controllers.Assets.at(path="/public", file="/img/arrow-down.png")

# Home page
GET     /                       			    @controllers.Application.index()
GET		/events/create							@controllers.EventController.pageCreate()
POST    /events        			                @controllers.EventController.save()

GET		/downloadTweets/:eventId				@controllers.EventController.downloadTweets(eventId: String)

GET 	/roots/generate							@controllers.RootController.pageGenerate()
POST 	/roots									@controllers.RootController.generate()


GET		/roots									@controllers.RootController.list()
GET		/roots/:orderType/:pageNum/:pageSize	@controllers.RootController.paginate(pageNum: Integer, pageSize: Integer, orderType: String)

GET 	/roots/generate/status					@controllers.RootController.status()

POST	/roots/acceptRoot/:rootId				@controllers.RootController.acceptRoot(rootId: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
